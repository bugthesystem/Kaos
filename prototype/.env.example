# KaosNet Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# JWT secret for authentication (min 32 characters, use a secure random value)
# Generate with: openssl rand -base64 32
KAOS_JWT_SECRET=your-secure-jwt-secret-at-least-32-chars

# Admin account credentials (change from defaults!)
KAOS_ADMIN_USERNAME=admin
KAOS_ADMIN_PASSWORD=change-me-in-production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment: development, staging, production
KAOS_ENV=development

# Console API bind address
KAOS_CONSOLE_BIND=127.0.0.1:7350

# WebSocket game server bind address
KAOS_WS_BIND=127.0.0.1:7351

# Allow unauthenticated access to status endpoints
KAOS_PUBLIC_STATUS=true

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================

# Full database connection URL
DATABASE_URL=postgres://kaos:kaos@localhost:5432/kaosnet

# Or individual components (DATABASE_URL takes precedence)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=kaos
# POSTGRES_PASSWORD=kaos
# POSTGRES_DB=kaosnet

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Enable metrics endpoint (/metrics)
# KAOS_METRICS_ENABLED=true

# Enable detailed tracing
# KAOS_TRACING_ENABLED=true

# Rate limiting (requests per second)
# KAOS_RATE_LIMIT=100

# =============================================================================
# CONSOLE UI (Frontend)
# =============================================================================

# API URL for the console frontend (for docker/remote setups)
VITE_API_URL=http://localhost:7350
