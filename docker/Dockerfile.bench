FROM rust:1.83-slim-bookworm

# Install dependencies
RUN apt-get update && apt-get install -y \
    numactl \
    libnuma-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy source
COPY . .

# Build release
RUN cargo build --release -p kaos

# Default: run benchmarks
CMD ["cargo", "bench", "-p", "kaos", "--bench", "bench_core"]

